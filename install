#!/usr/bin/env bash

declare -a dotfiles=(
  "vimrc" 
)

BASEDIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

for f in "${dotfiles[@]}"; do
  if [[ -f ~/."${f}" ]]; then
    echo "file ~/.${f} already exists, skipping."
  else
    echo "creating symlink for ${f}"
    ln -s "${BASEDIR}/${f}" ~/."${f}"
  fi
done
