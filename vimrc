filetype plugin indent on
set autoindent
set smartindent

syntax on

set noerrorbells visualbell t_vb=

set splitbelow
set splitright

set hlsearch
set showmatch
set ignorecase
set smartcase

set expandtab
set smarttab
set wrap

set nu

set nobackup
set writebackup
set laststatus=2

set background=dark
colorscheme solarized
